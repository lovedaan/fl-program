<view class="search-page">
  <view class="search-bar">
    <view class="search-box">
      <van-search
        value="{{ value }}"
        placeholder="认证编码、手机号、身份证号"
        use-action-slot
        bind:change="handelInput"
      >
      </van-search>
      <view class="sreach-btn" bind:tap="onSearch">搜索</view>
    </view>
  </view>
  <view class="search-result">
    <view wx:if="{{resultList.length > 0}}">
      <navigator hover-class="none" url="/pages/detail2/index" class="item">
        <view class="user-info">
          <view class="user-name">李四</view>
          <view class="user-phone">15915941956</view>
          <view class="user-carid">45668***218293</view>
        </view>
        <view class="pic">
          <image src="http://images.jxsg.com/thumb/goods_gallery/wap/2018/09/d1dc1c0916c187f2c2da19a96a165812.jpg" mode="aspectFill"></image>
        </view>
      </navigator>
    </view>
  </view>
  <view class='no-page' wx:if="{{isNodata}}">
    <image src='/assets/ndata.png'></image>
    <view class='text'>没有相关信息！</view>
  </view>
</view>
