.courseDetail-page {
  width: 100%;
  height: 100%;
  background: rgb(220, 224, 240);
}
.detail-top {
  width: 100%;
  height: 380rpx;
  margin-bottom: 20rpx;
}
.detail-top image {
  width: 100%;
  height: 100%;
}
.detail-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.detail-item .item-title {
  font-size: 30rpx;
  font-weight: 600;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 15px;
}
.base-info .line {
  display: flex;
  align-items: center;
  height: 60rpx;
  border-bottom: 1rpx dashed #eee;
}
.base-info .line .v-label {
  width: 130rpx;
  font-size: 26rpx;
  color: #333;
}