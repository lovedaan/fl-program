.courseDetail-page {
  width: 100%;
  height: 100%;
  background: rgb(220, 224, 240);
}
.detail-top {
  width: 100%;
  height: 380rpx;
}
.detail-top image {
  width: 100%;
  height: 100%;
}
.detail-item {
  background: #fff;
  margin-bottom: 20rpx;
}
.detail-item .item-title {
  font-size: 30rpx;
  font-weight: 600;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.base-info {
  padding: 0 20rpx;
}
.base-info .line {
  display: flex;
  align-items: center;
  height: 68rpx;
}
.base-info .line .v-label {
  width: 130rpx;
  font-size: 26rpx;
  color: #686464;
}
.base-info .line .v-val {
  flex: 1;
  font-size: 30rpx;
  color: #000;
  font-weight: 500;
}
.courseDetail-page .content {
  padding: 20rpx;
  font-size: 26rpx;
}