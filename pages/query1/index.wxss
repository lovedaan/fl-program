
.search-page2 {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  padding-top: 10rpx;
}
.address-top {
  height: 100rpx;
  padding: 0 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.address-label {
  display: flex;
  align-items: center;
  width: 240rpx;
  font-size: 28rpx;
}
.address-top-com {
  display: flex;
  align-items: center;
}
.addres-icon {
  width: 26rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.address-select {
  height: 100rpx;
  flex: 1;
}

.address-picker {
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.arrow2 {
  width: 22rpx;
  height: 30rpx;
}

.address-item {
  padding: 20rpx;
  background: #fff;
  margin-block-start: 20rpx;
}
.address-item .a-title {
  font-weight: bold;
  margin-bottom: 15rpx;
}
.address-item .d-info {
  position: relative;
  padding: 10rpx;
}
.address-item .d-info .d-line{
  font-size: 26rpx;
  color: #888;
  line-height: 40rpx;
}
.address-item .d-info .d-btn {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width:150rpx;
  height:56rpx;
  border-radius:28rpx;
  border:1rpx solid #999;
  text-align: center;
  line-height: 56rpx;
  font-size: 26rpx;
  color: #999;
}
.no-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}
.no-page .text {
  font-size: 40rpx;
  text-align: center;
}
.no-page image {
  margin-bottom: 50rpx;
  width: 240rpx;
  height: 240rpx;
}