.item {
  display: flex;
  padding: 15rpx;
  border-bottom: 1px solid #ccc;
}
.item .pic {
  width: 150rpx;
  height: 200rpx;
  margin-right: 15rpx;
}
.item .pic image {
  width: 100%;
  height: 100%;
}
.user-info {
  flex: 1;
}
.user-info view {
  margin-bottom: 8rpx;
  font-size: 28rpx;
}
.user-info .user-desc {
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}