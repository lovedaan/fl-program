/**index.wxss**/
.container {
  width: 100%;
  background: #fff;
}
.group-title-box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 300rpx;
  background: linear-gradient(to right,rgb(254, 214, 70),rgb(255, 229, 136));
}
.form-container{
  padding: 0 40rpx 40rpx;
}
.group-title-txt{
  display: flex;
  padding: 60rpx;
  height: 180rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  color: #fff;
}
.group-title-txt text{
  margin-left: 20px;
  font-weight: 600;
  font-size: 48rpx;
}
.group-icon{
  display: flex;
  margin-top: 40rpx;
  text-align: left;
}
 .group-icon image{
  width: 70rpx;
  height: 70rpx;
}
.group-title {
  margin-left: 20rpx;
  line-height: 70rpx;
  text-align: left;
  font-size: 26rpx;
  color: #999;
}
.pic-box1 {
  display: flex;
  background: #fff;
  padding: 10px 15px;
}
.pic-box1 .pic-1 {
  width: 200rpx;
}
.pic-label {
  position: relative;
  margin-bottom: 10px;
  font-size: 14px;
  width: 90px;
}
.required::before {
  position: absolute;
  left: -8px;
  font-size: 14px;
  color: #f44;
  content: "*";
}

.pic-box1 .pic-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #444;
  border-radius: 10rpx;
  height: 200rpx;
  width: 100%;
}
.pic-preview {
  position: relative;
  height: 200rpx;
  width: 200rpx;
}
.pic-preview .pre1 {
  width: 100%;
  height: 100%;
}
.pic-preview .close-btn {
  position: absolute;
  width: 55rpx;
  height: 55rpx;
  right: 5rpx;
  top: 5rpx;
}
.pic-box1 .pic-btn image {
  width: 50rpx;
  height: 45rpx;
}
.pic-box2{
  padding-top: 10px;
}
.pic-box2 .pic, .pic-box2 .pic-btn {
  height: 200rpx;
  width: 200rpx;
}

.form-footer {
  padding: 45rpx 15rpx;
}
.ly-type {
  background: #fff;
  padding: 0 15px;
  height: 44px;
}
.ly-text {
  position: relative;
  font-size: 26rpx;
  width: 160rpx;
  white-space: nowrap;
}
.van-radio {
  margin-right: 30rpx;
}
.xw-box {
  padding: 10px 15px 0;
}
.xw-box .label {
  position: relative;
  font-size: 14px;
  width: 90px;
}
.textarea {
  flex: 1;
}
.xw-textarea {
  margin: 40rpx 0;
  padding: 20rpx;
  width: 100%;
  height: 200px;
  border: 1px solid #eee;
}