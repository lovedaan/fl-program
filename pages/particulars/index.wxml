<!--index.wxml-->
<view class="container detail-page">
  <view class="form-container">
    <view class='detail-title'>详细信息</view>
    <view class="form-group">
      <van-cell-group>
        <van-field
          value="{{ rankInfo.name }}"
          label="姓名或机构名"
          disabled
        />
        <van-field
          value="{{ rankInfo.mobile }}"
          label="电话"
          disabled
        />
        <van-field
          value="{{ rankInfo.idCard }}"
          label="身份证号"
          disabled
        />
        
        <view class="pic-box1">
          <view class='box1'>
            <view class="pic-label">机构或个人相片</view>
            <view class="pic">
              <image class="pre1" mode="aspectFill" src="{{rankInfo.headImg}}"></image>
            </view>
          </view>
        </view>
        <view class="pic-box1">
          <view class='box1 box2'>
            <view class="pic-label">身份证</view>
            <view class="pic">
              <image class="pre1" mode="aspectFill" src="{{rankInfo.idCardImg}}"></image>
            </view>
          </view>
        </view>
      </van-cell-group>
    </view>
  </view>
  <view class='detail-line'></view>
  <view class="xw-box">
    <view class='detail-title'>红黑榜记录</view>
    <view class="xw-list">
      <view  class='xw-item' wx:for="{{reasonList}}" wx:key="index">
        <view class="xw-item-title"><text>{{item.createUser}}</text><text>上榜类型：{{item.type}}</text></view>
        <view class='item-text'>{{item.reason}}</view>
        <view class='item-time'><text>{{item.dateCreated}}</text></view>
      </view>
    </view>
  </view>
</view>
