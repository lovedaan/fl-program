.banner-wrap, .banner-swiper {
  width: 750rpx;
  height: 423rpx;
}

.banner-swiper image {
  width: 100%;
  height: 423rpx;
}
.nav-wrap {
  margin-top: 30rpx;
  padding: 20rpx;
}
.line-title {
  text-align: center;
}
.line-title text{
  position: relative;
  font-size: 32rpx;
  color: #666;
}

.line-title text::before, .line-title text::after {
  content: "";
  position: absolute;
  top:  50%;
  transform: translateY(-50%);
  height: 1rpx;
  width: 200rpx;
  background: #666;
}
.line-title text::before {
  left: -230rpx;
}
.line-title text::after {
  right: -230rpx;
}
.nav-box {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.nav-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 200rpx;
  border: 1rpx solid #555;
  border-radius: 10rpx;
  font-size: 34rpx;
}