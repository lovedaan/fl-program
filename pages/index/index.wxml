<!--index.wxml-->
<view class="container">
  <view class="form-container">
    <view class="form-group">
      <view class="group-title">我的信息</view>
      <van-cell-group>
        <van-field
          value="{{ user_name }}"
          required
          clearable
          label="姓名"
          placeholder="请输入姓名"
        />
        <van-field
          value="{{ user_phone }}"
          label="电话"
          placeholder="请输入电话"
          required
        />
      </van-cell-group>
    </view>
    <view class="form-group">
      <view class="group-title">黑名单信息</view>
      <van-cell-group>
        <van-field
          value="{{ user_name }}"
          required
          clearable
          label="姓名"
          placeholder="请输入姓名"
        />
        <van-field
          value="{{ user_phone }}"
          label="电话"
          placeholder="请输入电话"
          required
        />
        <van-field
          value="{{ user_id_card }}"
          label="身份证号"
          placeholder="请输入身份证号码"
          required
        />
        <van-field
          value="{{ user_id_card }}"
          label="行为描述"
          type="textarea"
          autosize
          placeholder="请输入恶劣行为描述"
          required
        />
        <view class="pic-box1">
          <view class="pic-label required">相片</view>
          <view class="pic">
            <view class="pic-preview" wx:if="{{pic1}}"><image src="/assets/img/close.png" class="close-btn"></image><image class="pre1" src="{{pic1}}"></image></view>
            <view class="pic-btn" wx:else>
              <image src="/assets/img/photo-icon.png"></image>
            </view>
          </view>
        </view>
        <view class="pic-box1 pic-box2">
          <view class="pic-label required">身份证</view>
          <view class="pic">
            <view class="pic-preview" wx:if="{{pic2}}"><image src="/assets/img/close.png" class="close-btn"></image><image class="pre1" src="{{pic2}}"></image></view>
            <view class="pic-btn" wx:else>
              <image src="/assets/img/photo-icon.png"></image>
            </view>
          </view>
        </view>
      </van-cell-group>
    </view>
  </view>
   <view class="form-footer">
      <van-button type="info" size="large">提交</van-button>
    </view>
</view>
