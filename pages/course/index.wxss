.course-page {
  width: 100%;
  height: 100%;
  background: rgb(220, 224, 240);
 display: flex;
 flex-direction: column;
 align-items: center;
}
.scroll-view {
  flex: 1;
   padding-top: 40rpx; 
   overflow-y: auto;
}
.course-item {
  width: 690rpx;
  margin: 0 auto 30rpx;
  border-radius: 20rpx;
  padding: 15rpx 0;
  background: #fff;
}
.course-item .c-title {
  padding: 15rpx 0;
  text-align: center;
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
  color: #000;
}
.course-item .circle-box {
  display: flex;
  flex-wrap: wrap;
}
.course-item .circle-box .circle-item {
  width: 230rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.course-item .circle-box .circle-item .c-hd {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #ccc;
  margin-bottom: 10rpx;
}
.course-page .footer-btn {
  background: #fff;
  padding: 15px 30rpx;
}
.course-page .join-btn {
  width: 690rpx;
  margin: 0 auto;
  height:90rpx;
  line-height: 90rpx;
  background:rgb(46, 108, 241);
  box-shadow:0px 6px 24px 0px rgba(46, 108, 241,0.4);
  border-radius:42px;
  text-align: center;
  color: #fff;
}